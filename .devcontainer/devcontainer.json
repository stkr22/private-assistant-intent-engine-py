{
	"name": "private-assistant-intent-engine-dev-environment",
	"image": "ghcr.io/stkr22/devcontainer-python-container:1.2.3@sha256:a603226b921a1d5ffa7beea34471c0ec830f6c5ab0878a0d198be862bb06f523",
	"runArgs": [
		"--cap-add=NET_RAW" // Needed for Claude Code IDE integration
	],
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-python.python",
				"samuelcolvin.jinjahtml",
				"streetsidesoftware.code-spell-checker",
				"christian-kohler.path-intellisense",
				"charliermarsh.ruff",
				"ms-python.mypy-type-checker",
				"tamasfe.even-better-toml",
				"github.vscode-github-actions",
				"oderwat.indent-rainbow",
				"mhutchie.git-graph",
				"vivaxy.vscode-conventional-commits",
				"Anthropic.claude-code"
			]
		}
	},
	"mounts": [
		{
			"source": "claude-code-bashhistory-${devcontainerId}",
			"target": "/commandhistory",
			"type": "volume"
		},
		{
			"source": "claude-code-config-${devcontainerId}",
			"target": "/home/vscode/.claude",
			"type": "volume"
		}
	],
	"postCreateCommand": "uv sync --group dev"
}
